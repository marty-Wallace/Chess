package piece;

import java.util.ArrayList;

import board.Board;
import board.Location;
import board.Square;

/**
 * 
 * @author Martin Wallace
 * <p> marty.wallace@ymail.com
 * <p> Jan 28th 2016
 *
 */
public abstract class Piece {
	
	private Square currentSquare;
	private final boolean isWhite;
	public Piece(boolean isWhite){
		this.isWhite = isWhite;
	}
	
	
	public void setSquare(Square square){
		this.currentSquare = square;
		this.currentSquare.setFilled();
	}
	
	public void move(Square square){
		this.currentSquare.setEmpty();
		this.currentSquare = square;
 assert this.currentSquare.isEmpty() : "Attempted to move to filled Square";
		this.currentSquare.setFilled();
	}
	
	public boolean isWhite(){
		return this.isWhite;
	}
	
	public boolean isBlack(){
		return !this.isWhite;
	}

	public ArrayList<Square> getAvailableMoves(Board board, Location loc) {
		return null;
	}
	
}
